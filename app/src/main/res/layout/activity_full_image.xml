<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <com.github.chrisbanes.photoview.PhotoView android:id="@+id/fullPhotoView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>

    <LinearLayout android:id="@+id/zoomButtonsContainer"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end|center"
                  android:orientation="vertical">

        <ImageButton android:id="@+id/zoomUpButton"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@android:color/transparent"
                     android:src="@drawable/zoom_up_icon"/>

        <ImageButton android:id="@+id/zoomDownButton"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@android:color/transparent"
                     android:src="@drawable/zoom_down_icon"/>
    </LinearLayout>

</FrameLayout>