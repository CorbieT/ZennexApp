<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:orientation="vertical">

    <TextView android:id="@+id/descriptionTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginBottom="10dp"
              tools:text="@string/lorem_ipsum"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:id="@+id/idTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  tools:text="id: 3123213" android:textStyle="bold" android:textAlignment="textStart"/>

        <TextView android:id="@+id/timeTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  tools:text="time: 12.12.2012" android:textStyle="bold" android:textAlignment="center"/>

        <TextView android:id="@+id/ratingTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  tools:text="rating: 1" android:textStyle="bold" android:textAlignment="textEnd"/>
    </LinearLayout>


</LinearLayout>